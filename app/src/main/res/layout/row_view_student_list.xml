<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/student_list_selector"
              android:orientation="horizontal"
              android:minHeight="72dip">

    <com.frederis.notsureifreading.widget.BezelImageView
        android:id="@+id/student_image"
        app:maskDrawable="@drawable/circle_mask"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_gravity="center_vertical"
        app:borderDrawable="@drawable/circle_border"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="72dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/body_text_1"
            tools:text="Sean Fredericksen"/>

        <TextView
            android:id="@+id/sight_words_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/body_text_2"
            tools:text="Words: 1 - 20"/>

    </LinearLayout>

</FrameLayout>
