<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:paddingBottom="5dip">

        <TextView
            android:id="@+id/assessment_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/body_text_1"
            tools:text="Sean Fredericksen"/>

        <TextView
            android:id="@+id/assessment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="16sp"
            android:textColor="@color/body_text_2"
            tools:text="Saturday, Jan 3"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:paddingBottom="10dip">

        <TextView
            android:id="@+id/assessment_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/body_text_1"
            tools:text="Words 1 to 20"/>

        <TextView
            android:id="@+id/assessment_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="20sp"
            android:layout_marginLeft="10dip"
            android:textColor="@color/primary_dark"
            tools:text="60% accuracy"/>

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@color/divider"/>

    <com.frederis.notsureifreading.view.AssessmentWordsRecyclerView
        android:id="@+id/assessment_answers_recycler"
        android:layout_width="match_parent"
        android:background="@color/body_text_1"
        android:paddingTop="8dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:layout_height="match_parent"/>

</LinearLayout>